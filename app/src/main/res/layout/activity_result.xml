<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topp_background">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLoading"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/result" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/circles"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/white_background"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@id/lottieLoading"
            app:layout_constraintStart_toStartOf="@id/lottieLoading"
            app:layout_constraintTop_toBottomOf="@id/lottieLoading"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/tvPredictedClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background"
                android:padding="15dp"
                android:text="Prediksi"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/baseline_health_and_safety_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lottieLoading" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/tvSuggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Saran"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/baseline_health_and_safety_24"
                app:layout_constraintEnd_toEndOf="@id/tvPredictedClass"
                app:layout_constraintStart_toStartOf="@id/tvPredictedClass"
                app:layout_constraintTop_toBottomOf="@id/tvPredictedClass" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/tvDefinition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background"
                android:padding="15dp"
                android:drawablePadding="5dp"
                android:text="Definisi"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/baseline_health_and_safety_24"
                app:layout_constraintEnd_toEndOf="@id/tvSuggestion"
                app:layout_constraintStart_toStartOf="@id/tvSuggestion"
                app:layout_constraintTop_toBottomOf="@id/tvSuggestion" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Kategori"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/baseline_health_and_safety_24"
                app:layout_constraintEnd_toEndOf="@id/tvDefinition"
                app:layout_constraintStart_toStartOf="@id/tvDefinition"
                app:layout_constraintTop_toBottomOf="@id/tvDefinition" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/tvSeverity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Persentase"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/baseline_health_and_safety_24"
                app:layout_constraintEnd_toEndOf="@id/tvCategory"
                app:layout_constraintStart_toStartOf="@id/tvCategory"
                app:layout_constraintTop_toBottomOf="@id/tvCategory" />
        </LinearLayout>

        <Button
            android:id="@+id/consul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="@string/les_t_go_consultation"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/linear"
            app:layout_constraintStart_toStartOf="@id/linear"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>